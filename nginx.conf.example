# Configuration Nginx pour Monitoring Sites
# À placer dans /etc/nginx/sites-available/monitoring-sites
# Puis créer un lien symbolique: sudo ln -s /etc/nginx/sites-available/monitoring-sites /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name monitoring.votredomaine.com;  # Changez par votre domaine

    # Redirection HTTP vers HTTPS (à activer après avoir configuré SSL)
    # return 301 https://$server_name$request_uri;

    # Logs
    access_log /var/log/nginx/monitoring-sites-access.log;
    error_log /var/log/nginx/monitoring-sites-error.log;

    # Frontend statique (après build)
    location / {
        root /var/www/monitoring-sites/frontend/dist;
        try_files $uri $uri/ /index.html;

        # Cache pour les assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # API Backend
    location /api {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeouts pour les requêtes longues (scraping)
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
    }

    # Health check
    location /health {
        proxy_pass http://localhost:3001/health;
        proxy_http_version 1.1;
        access_log off;
    }
}

