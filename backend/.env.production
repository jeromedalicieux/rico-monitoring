# Configuration de production pour VPS

# Port du serveur
PORT=3001

# Environnement
NODE_ENV=production

# Base de données
DB_PATH=./data/monitoring.db

# Configuration du scraping
SCRAPING_MIN_DELAY=30000
SCRAPING_MAX_DELAY=60000
SCRAPING_MAX_RETRIES=3
SCRAPING_HEADLESS=true   # IMPORTANT: Mode headless pour serveur sans écran

# Configuration des alertes
ALERT_POSITION_DROP_THRESHOLD=5

# Cron pour l'exécution quotidienne (par défaut: tous les jours à 9h)
CRON_SCHEDULE=0 9 * * *
